    function checkPassword() {
      const password = document.getElementById("password").value;
      if (password === "пединівка") {
        window.location.href = "https://www.darlingzhu.com/secret_page";
      } else {
        alert("Неправильний пароль. Спробуйте ще раз.");
      }
    }
